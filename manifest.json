{
  "manifest_version": 3,
  "name": "BadAds",
  "version": "1.3",
  "description": "Smart popup and new-tab ad blocker.",
  "permissions": [
    "tabs",
    "storage",
    "webNavigation"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/logoOn16.png",
    "32": "icons/logoOn32.png",
    "48": "icons/logoOn48.png",
    "128": "icons/logoOn128.png"
  },
  "action": {
    "default_popup": "options.html",
    "default_icon": {
      "16": "icons/logoOn16.png",
      "32": "icons/logoOn32.png",
      "48": "icons/logoOn48.png",
      "128": "icons/logoOn128.png"
    }
  }
}
